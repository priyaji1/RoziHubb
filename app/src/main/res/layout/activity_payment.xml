<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorsplash"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logorozi" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="5dp"
        android:background="@drawable/round1">

        <TextView
            android:id="@+id/newpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:textSize="25dp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:text="PAYMENT CONFIRM" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/booking"
            android:text="Your Booking id: 58989990"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_below="@id/newpass"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vender_name"
            android:text="Vender Name: Ram"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_below="@id/booking"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="Date: 15-08-2018"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_below="@id/vender_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rs"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:text="Rs 100"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textSize="30sp"
            android:layout_below="@id/date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amtpaid"
            android:layout_below="@+id/rs"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:text="Amount Paid"/>
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/amtpaid"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="8dp"
           android:layout_marginLeft="70dp"
           android:layout_marginRight="70dp"
           android:text="Continue"
           android:textColor="@color/white"
           android:layout_marginBottom="30dp"
           android:background="@drawable/round"/>

    </RelativeLayout>


</RelativeLayout>